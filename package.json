{
  "name": "discord_deploy",
  "version": "2.0.0",
  "readme": "./README.md",
  "repository": {
    "url": "https://github.com/felipee-monteiro/discord_deploy"
  },
  "bin": {
    "discord_deploy": "./bin/cli.js"
  },
  "files": [
    "./bin/cli.js",
    "LICENSE",
    "README.md"
  ],
  "description": "A CLI to deploy slash guild commands easily.",
  "main": "./bin/cli.js",
  "type": "module",
  "scripts": {
    "dev": "npx tsc -w",
    "test:e2e": "npx c8 ava __tests__/e2e.test.js",
    "test:unit": "set NODE_OPTIONS=--experimental-vm-modules && set NODE_ENV=test && npx jest unit.test.js",
    "lint": "eslint .",
    "prod": "node bin\\cli.js deploy",
    "build": "npx tsc && npx tsup-node",
    "prepack": "npm run build && npm run prod"
  },
  "keywords": [
    "slash commands",
    "discord",
    "cli",
    "bot",
    "deploy",
    "commands",
    "discord.js",
    "eris"
  ],
  "tsup": {
    "entry": [
      "cli.ts"
    ],
    "target": "es2020",
    "outDir": "./bin",
    "format": "esm",
    "minify": true,
    "splitting": false,
    "sourcemap": false,
    "bundle": true,
    "packages": "external",
    "clean": true
  },
  "author": "felipee-monteiro",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash.foreach": "^4.5.7",
    "@types/lodash.map": "^4.6.13",
    "@types/node": "^18.15.3",
    "@types/node-fetch": "^2.6.2",
    "ansi-styles": "^6.2.1",
    "ava": "^5.2.0",
    "cac": "^6.7.14",
    "discord.js": "^14.8.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.12",
    "eslint": "^8.36.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "jest": "^29.5.0",
    "lodash.foreach": "^4.5.0",
    "lodash.map": "^4.6.0",
    "node-fetch": "^3.3.1",
    "ora": "^6.2.0",
    "prettier": "^2.8.4",
    "tsup": "^6.7.0",
    "tsx": "^3.12.5",
    "typescript": "^4.9.5"
  }
}
