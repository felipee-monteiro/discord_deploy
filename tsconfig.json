{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": false,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/node_modules/**",
    "commands",
    "bin",
    "dist",
    "__tests__",
    "@types"
  ],
  "include": [
    "src/*.ts",
    "cli.ts",
    "**/*.d.ts",
    "fetch.ts"
  ],
  "files": [
    "cli.ts"
  ]
}