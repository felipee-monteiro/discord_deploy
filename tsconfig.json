{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./bin",
    "strict": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "commands",
    "bin",
    "dist",
    "__tests__"
  ],
  "include": [
    "src/**/*.ts",
    "cli.ts"
  ],
  "files": [
    "cli.ts"
  ]
}