{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/node_modules/**",
    "commands",
    "dist",
    "__tests__",
    "coverage",
    "build",
    "bin"
  ],
  "include": [
    "src/*.ts",
    "cli.ts",
  ],
  "files": [
    "cli.ts"
  ]
}